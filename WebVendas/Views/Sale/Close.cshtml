@{
    ViewData["Title"] = "Fechamento";
    Sale sale = ViewBag.Sale as Sale;
    List<SaleItem> saleItems = (List<SaleItem>)ViewBag.SaleItems;

}

<div class="container mt-5 align-items-center">

    <div class="row g-3">
        <div class="col-8">
            <h1>Fechamento</h1>
        </div>
        <div class="col-2">
            <button class="btn btn-lg btn-success" onclick="window.print()">Imprimir Nota</button>
        </div>
        <div class="col-2">
            <a asp-action="Index" class="btn btn-lg btn-danger">Sair</a>
        </div>
    </div>

    <hr />

    <partial name="_Messages" />
</div>

<section id="printable1" class="mt-5">
    <div class="row border border-dark p-1">
        <p class="text-end">1ª Via - Cliente</p>
        <div class="col-2">
            <img src="~/img/Logo.png" style="width: 160px; height:auto; " />
        </div>
        <div class="col-8 text-center">
            <h5 class="text-success"><b>EXPLOSÃO DO SABOR</b></h5>
            <h5 class="text-success"><b>TELEFONE: (62) 9 8519-8352</b></h5>
            <h6><b>Cliente</b>: @sale.Client.Name</h6>
            <h6><b>Endereço</b>: @sale.Client.Address, @sale.Client.City - @sale.Client.State. <b>CEP</b>: @sale.Client.ZipCode</h6>
            <h6><b>Telefone</b>: @sale.Client.Contact | <b>E-mail</b>: @sale.Client.Email</h6>
        </div>
        <div class="mt-3">
            <div class="col-12">
                @if (saleItems.Count() > 0)
                {
                    <table class="table table-striped table-light">
                        <thead>
                            <tr class="text-center">
                                <th scope="col">
                                    Produto
                                </th>
                                <th scope="col">
                                    Valor do Produto
                                </th>
                                <th scope="col">
                                    Quantidade
                                </th>
                                <th scope="col">
                                    Valor Total do Item
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (SaleItem item in saleItems)
                            {
                                <tr class="text-center">
                                    <td class="text-start">
                                        @item.Product.Name
                                    </td>
                                    <td>
                                        @item.Value.ToString("C", System.Globalization.CultureInfo.CreateSpecificCulture("pt-BR"))
                                    </td>
                                    <td>
                                        @item.Quantity
                                    </td>
                                    <td>
                                        @item.TotalValue.ToString("C", System.Globalization.CultureInfo.CreateSpecificCulture("pt-BR"))
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <p class="text-end"><b>Valor Total: @saleItems.Sum(si => si.TotalValue).ToString("C",System.Globalization.CultureInfo.CreateSpecificCulture("pt-BR"))</b></p>
                }
                else
                {
                    <h1>
                        Não há nenhuma venda cadastrada.
                    </h1>
                }
            </div>
        </div>
    </div>
</section>

