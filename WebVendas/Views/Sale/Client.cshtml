@model Sale
@{ 
    List<Client> clients = ViewData["Clients"] != null ? (List<Client>)ViewData["Clients"] : null;
    ViewData["Title"] = "Nova Venda";
}

<form method="post" asp-controller="Sale" asp-action="Create" class="row g-3" aria-label="novaVenda">
    <div class="col-md-2">
        <input asp-for="SaleId" class="form-control" hidden>
    </div>

    <div class="col-md-12">
        <label asp-for="ClientId" class="form-label">Cliente:</label>
        <select asp-for="ClientId" class="form-select" aria-label="ListaClientesPedido">
            <option selected value="" autofocus>Selecione o cliente...</option>
            @if (clients != null)
            {
                foreach (Client client in clients)
                {
                    <option value="@client.ClientId">@client.Name, @client.City - @client.State</option>
                }
            }
        </select>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-md-10 mt-4">
                <a asp-action="Index" class="btn btn-danger btn-lg">Cancelar</a>
                <button type="submit" class="btn btn-primary btn-lg">Avançar</button>
            </div>
        </div>
    </div>
</form>